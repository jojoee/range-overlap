{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "coverageDirectory": "./coverage/",
  "reporters": [
    "default"
  ],
  "coverageReporters": [
    "text",
    "text-summary"
  ],
  "collectCoverage": true,
  "verbose": true,
  "preset": "ts-jest"
}